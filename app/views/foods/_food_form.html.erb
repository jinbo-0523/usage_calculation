<%= render "layouts/error_messages", object: @food %>
<div class=form_area>
  <%= form_with model:@food,local: true do |form|%>
    <div class="form-group">
      <%= form.label :name%>
      <%= form.text_field :name , class: "form-control valid-field" ,placeholder: "食材名を入力してください" %>
      <div class="invalid-feedback">入力して下さい</div>
    </div>
    <div class="form-group">
      <%= form.label :total%>
      <%= form.text_field :total , class: "form-control valid-field" ,placeholder: "半角数字で入力してください"  %>
      <div class="invalid-feedback">入力して下さい</div>
    </div>
    <div class="form-group">
      <%= form.label :unit%>
      <%= form.text_field :unit , class: "form-control valid-field" ,placeholder: "例：pc,本,個" %>
      <div class="invalid-feedback">入力して下さい</div>
    </div>
    <% if action_name == 'new'%>
      <% form.check_box :display, class: "form-control" %>
      <% form.label :display, class: "custom-control-label"%>
    <% else %>
      <div class="custom-control custom-switch">
        <%= form.check_box :display, {class: "custom-control-input"}, checked_value = "true", unchecked_value = "false" %>
        <%= form.label :display, class: "custom-control-label"%>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.submit button_value, class: "btn btn-success btn-block" %>
    </div>
  <% end %>
</div>