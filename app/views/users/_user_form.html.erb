<%= render "layouts/error_messages", object: @user %>
<%=  form_with model: @user, local: true do |form|%>
  <div class="form-group">
    <%= form.label :employee_id %>
    <%= form.text_field :employee_id, class: "form-control valid-field" %>
      <div class="invalid-feedback">選択して下さい</div>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name , class: "form-control valid-field" %>
      <div class="invalid-feedback">入力して下さい</div>
  </div>

  <div class="form-group">
    <%= form.label :rank_id %>
    <%= form.select :rank_id, @ranks.pluck(:name, :id),{} , class: "form-control valid-field" %>
      <div class="invalid-feedback">選択して下さい</div>
    
    <%# pluckで配列化する %>

  <% if action_name == 'new' %>
    <div class="form-group">
      <% form.label :display %>
      <% form.text_field :display, class: "form-control"%>
    </div>
  <% else %>
    <div class="custom-control custom-switch">
      <%= form.check_box :display, {class: "custom-control-input"}, checked_value = "true", unchecked_value = "false" %>
      <%= form.label :display, class: "custom-control-label" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.submit button_value, class: "btn btn-success btn-block" %>
  </div>
<% end %>